# Database - Use PostgreSQL connection string from your provider
# Example for Railway: postgresql://user:password@host:port/database
DATABASE_URL="postgresql://user:password@host:port/santcomm_crm"

# JWT Secret - Generate a strong random secret
# You can generate one with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET="your-production-jwt-secret-here"

# Server Port
PORT=5000

# Frontend URL (for CORS)
FRONTEND_URL="https://crm.santcom.com"

# Node Environment
NODE_ENV="production"
